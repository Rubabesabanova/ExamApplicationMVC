@model ExamApplicationMVC.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/Public/Content/SignUp.css">
    <link rel="stylesheet" href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css'>
    <link rel="stylesheet" href='https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css'>
</head>
<body>
    <!-- Navbar-->
    <header class="header">
        <nav class="navbar navbar-expand-lg navbar-light py-3">
            <div class="container">
                <!-- Navbar Brand -->
                <a href="#" class="navbar-brand">
                    <img src="https://res.cloudinary.com/mhmd/image/upload/v1571398888/Group_1514_tjekh3_zkts1c.svg" alt="logo" width="150">
                </a>
            </div>
        </nav>
    </header>


    <div class="container">
        <div class="row py-5 mt-4 align-items-center" style="display: flex;">
            <!-- For Demo Purpose -->
            <div class="col-md-5 pr-lg-5 mb-5 mb-md-0">
                <img src="https://res.cloudinary.com/mhmd/image/upload/v1569543678/form_d9sh6m.svg" alt="" class="img-fluid mb-3 d-none d-md-block">
                <h1>Create an Account</h1>
                <p class="font-italic text-muted mb-0">Create a minimal registeration page using Bootstrap 4 HTML form elements.</p>

            </div>

            <!-- Registeration Form -->
            
            <div class="col-md-7 col-lg-6 ml-auto">
                @if (Session["WrongUser"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        Enter email and password correctly
                    </div>

                }
                @{Session["WrongUser"] = null;
                }
                <form action="@Url.Action("Login", "Auth")" class="p-4 text-white" method="post">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "display:none;" })

                        <!-- Email Address -->
                        <div class="input-group col-lg-12 mb-4">
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-white px-4 border-md border-right-0">
                                        <i class="fa fa-envelope text-muted"></i>
                                    </span>
                                </div>
                                <input id="Email" type="email" name="Email" placeholder="Email Address" class="form-control bg-white border-left-0 border-md" value=@(Model.Email==null ? null : Model.Email)>
                            </div>

                        </div>

                        <!-- Password -->
                        <div class="input-group col-lg-12 mb-4">
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-white px-4 border-md border-right-0">
                                        <i class="fa fa-lock text-muted"></i>
                                    </span>
                                </div>
                                <input id="Password" type="password" name="Password" placeholder="Password" class="form-control bg-white border-left-0 border-md" value=@(Model.Password==null ? null : Model.Password)>
                            </div>

                        </div>
                        <!-- Submit Button -->
                        <button type="submit" class="form-group col-lg-12 mx-auto mb-0 btn btn-primary btn-block py-2">
                            <span class="font-weight-bold">Create your account</span>
                        </button>

                        <!-- Divider Text -->
                        <div class="form-group col-lg-12 mx-auto d-flex align-items-center my-4">
                            <div class="border-bottom w-100 ml-5"></div>
                            <span class="px-2 small text-muted font-weight-bold text-muted">OR</span>
                            <div class="border-bottom w-100 mr-5"></div>
                        </div>

                        <!-- Already Registered -->
                        <div class="text-center w-100">
                            <p class="text-muted font-weight-bold">Haven't Registered? <a href="@Url.Action("Register", "Auth")" class="text-primary ml-2">Register</a></p>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.bundle.min.js'></script>
    <script src='https://code.jquery.com/jquery-3.3.1.slim.min.js'></script>
    <script src='~/Public/Scripts/SignUp.js'></script>
    <script src='~/Public/Scripts/jquery.validate.unobtrusive.min.js'></script>
    <script src='~/Public/Scripts/jquery.validate.min.js'></script>
    <script src='~/Public/Scripts/jquery-3.4.1.min.js'></script>
</body>
</html>

